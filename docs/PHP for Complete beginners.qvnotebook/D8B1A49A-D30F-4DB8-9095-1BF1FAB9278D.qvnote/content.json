      "type": "text",
      "data": "<h3>23. Function Parameters</h3>"
    },
    {
      "type": "text",
      "data": "passing_params_functions.php"
    },
    {
      "type": "code",
      "language": "php",
      "data": "<?php\n  $message = \"Mer\";\n  function greeting($message) {\n    echo $message;\n  }\n  greeting($message);\n?>"
    },
    {
      "type": "code",
      "language": "php",
      "data": "<?php\n  function calculate($number1, $number2) {\n    $sum = $number1 + $number2;\n    echo $sum;\n  }\n\n  calculate(12, 24);\n?>"
    },
    {
      "type": "text",
      "data": "<h3>24. Return Values From Functions&nbsp;</h3>"
    },
    {
      "type": "text",
      "data": "return_values_functions.php"
    },
    {
      "type": "code",
      "language": "php",
      "data": "<?php\n  function add_numbers($number1, $number2) {\n    $sum = $number1 + $number2;\n    return $sum;\n  }\n  \n  echo add_numbers(34, 64);\n?>"
    },
    {
      "type": "text",
      "data": "<h3>25. Global Variable and Scope&nbsp;</h3>"
    },
    {
      "type": "text",
      "data": "scope.php"
    },
    {
      "type": "code",
      "language": "php",
      "data": "<?php\n  $global_variable = \"outside\";\n\n  function convert() {\n    $global_variable = \"inside\";\n  }\n\n  echo $global_variable;\n  echo \"<br>\";\n  convert();\n  echo $global_variable;\n\n  function change_global() {\n    global $global_variable;\n    $global_variable = \"inside\";\n  }\n\n  echo \"<br>\";\n  change_global();\n  echo $global_variable;\n?>"
    },
